<% include partials/header.ejs %>
<style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }
        
        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
        
        tr:nth-child(even) {
            background-color: #dddddd;
        }
</style>
<h1>Let me help you checkin</h1>

<table>
        <thead><th>ISBN</th><th>Card ID</th><th>Borrower Name</th><th>CheckIn</th></thead>
        <%result.forEach(function(result){%>
    
            <tbody>
                <tr>
                    <td>
                <%=result.ISBN %>
                    </td>
                    <td>
                <%=result.card_id %>
                    </td>
                    <td>
                <%=result.bname %>
                    </td>
                    
               <td> <a href="/checkin/<%= result.ISBN %>">CheckIn</a></td>
                </tr>
            </tbody>
        <% }); %>
                
</table>
